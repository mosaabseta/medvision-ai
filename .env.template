# GI Copilot Environment Configuration
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=production  # development, staging, production
PORT=8000
WORKERS=4
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Database
DATABASE_URL=postgresql://gi_copilot:password@localhost:5432/gi_copilot

# Redis (for Celery and caching)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Object Storage (S3/MinIO)
S3_BUCKET_NAME=gi-copilot
S3_ENDPOINT_URL=http://localhost:9000  # MinIO endpoint, leave empty for AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# AI Model Configuration
AI_MODEL_ID=google/medgemma-4b-it
TARGET_FPS=1.0  # Frames per second to extract
BATCH_SIZE=10   # Number of frames to process in each batch

# OpenAI (for chat)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude (alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn  # Optional

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Limits
MAX_VIDEO_SIZE_MB=2048  # 2GB
MAX_VIDEO_DURATION_SECONDS=7200  # 2 hours

# Export Settings
EXPORT_EXPIRATION_DAYS=90
TEMP_FILE_RETENTION_HOURS=24

# Security
ALLOWED_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/gi_copilot.log
